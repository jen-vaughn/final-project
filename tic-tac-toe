board = {'1':' ','2':' ','3':' ','4':' ','5':' ','6':' ','7':' ','8':' ','9':' '}



def displayBoard(board):
    print(board['1'] + ' ï¸´' + board['2'] + ' ï¸´' + board['3'])
    print('â€”â€”+â€”â€”+â€”â€”')
    print(board['4'] + ' ï¸´' + board['5'] + ' ï¸´' + board['6'])
    print('â€”â€”+â€”â€”+â€”â€”')
    print(board['7'] + ' ï¸´' + board['8'] + ' ï¸´' + board['9'])



def game():

    player = 'â˜ƒ'
    totalPlays = 0


    while True:
    #for i in range(9):
        displayBoard(board)
        
        print("\nIt's your turn, " + player + "!")
        move = input("Choose a space, 1-9: ")
        print("\n\n")

        if board[move] == ' ':
            board[move] = player
            totalPlays += 1
        else:
            print("Chosen space is occupied.")
            print()
            continue

        if totalPlays >= 5:
            if board['1'] == board['2'] == board['3'] != ' ':
                displayBoard(board)
                print("\nGAME OVER")                
                print(player + " won!")                
                break
            elif board['4'] == board['5'] == board['6'] != ' ':
                displayBoard(board)
                print("\nGAME OVER")                
                print(player + " won!")                
                break
            elif board['7'] == board['8'] == board['9'] != ' ':
                displayBoard(board)
                print("\nGAME OVER")                
                print(player + " won!")                
                break
            elif board['1'] == board['4'] == board['7'] != ' ':
                displayBoard(board)
                print("\nGAME OVER")                
                print(player + " won!")                
                break
            elif board['2'] == board['5'] == board['8'] != ' ':
                displayBoard(board)
                print("\nGAME OVER")                
                print(player + " won!")                
                break
            elif board['3'] == board['6'] == board['9'] != ' ':
                displayBoard(board)
                print("\nGAME OVER")                
                print(player + " won!")                
                break 
            elif board['3'] == board['5'] == board['7'] != ' ':
                displayBoard(board)
                print("\nGAME OVER")                
                print(player + " won!")                
                break
            elif board['1'] == board['5'] == board['9'] != ' ':
                displayBoard(board)
                print("\nGAME OVER")                
                print(player + " won!")                
                break 

        if totalPlays == 9:
            displayBoard(board)
            print("\nGAME OVER\n")                
            print("It's a tie!")

        if player =='â˜ƒ':
            player = 'ðŸŽ„'
        else:
            player = 'â˜ƒ'        
    
    again = input("\nPlay again? ")
    if again == "y" or again == "Y" or again == "Yes" or again == "yes":  
        for key in board:
            board[key] = ' '
        print()
        game()


game()
